@model APPR_Foudation.Models.User

@{
    ViewData["Title"] = "My Profile";
}

<h2>My Profile</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h5>Personal Information</h5>
                <dl class="row">
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Phone:</dt>
                    <dd class="col-sm-8">@Model.PhoneNumber</dd>

                    <dt class="col-sm-4">Member Since:</dt>
                    <dd class="col-sm-8">@Model.DateRegistered.ToString("MMM dd, yyyy")</dd>

                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-success">Active</span>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Home</a>
</div>