@{
    ViewData["Title"] = "Gift of the Givers Foundation - Disaster Relief & Humanitarian Aid";
}

<!-- Hero Section -->
<section class="hero-section bg-primary text-white py-5 mb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">Africa's Largest Disaster Relief Organization</h1>
                <p class="lead mb-4">Saving lives, rebuilding communities, and restoring hope since 1992. Providing immediate response to natural disasters and humanitarian crises across South Africa and beyond.</p>
                <div class="hero-buttons">
                    <a href="@Url.Action("Donate", "Donation")" class="btn btn-warning btn-lg me-3 mb-2">
                        <i class="fas fa-hand-holding-heart"></i> Donate Now
                    </a>
                    <a href="@Url.Action("Register", "Volunteer")" class="btn btn-outline-light btn-lg me-3 mb-2">
                        <i class="fas fa-hands-helping"></i> Become a Volunteer
                    </a>
                    <a href="@Url.Action("Report", "Incident")" class="btn btn-light btn-lg mb-2">
                        <i class="fas fa-exclamation-triangle"></i> Report Emergency
                    </a>
                </div>
            </div>
            <div class="col-lg-4 text-center">
                <div class="hero-stats bg-dark bg-opacity-50 p-4 rounded">
                    <h4 class="mb-3">Our Impact</h4>
                    <div class="row text-center">
                        <div class="col-6 mb-3">
                            <div class="stat-number h3 text-warning">30+</div>
                            <div class="stat-label small">Years of Service</div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="stat-number h3 text-warning">45+</div>
                            <div class="stat-label small">Countries Reached</div>
                        </div>
                        <div class="col-6">
                            <div class="stat-number h3 text-warning">R2B+</div>
                            <div class="stat-label small">Aid Delivered</div>
                        </div>
                        <div class="col-6">
                            <div class="stat-number h3 text-warning">1000+</div>
                            <div class="stat-label small">Projects</div>
                        </div>
                    </div>
                </div>
            </div>
