@{
    ViewData["Title"] = "About Us";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <h1 class="display-4 text-center mb-4">About Gift of the Givers</h1>

        <div class="card mb-4">
            <div class="card-body">
                <h3 class="card-title"><i class="fas fa-bullseye text-primary me-2"></i>Our Mission</h3>
                <p class="card-text">
                    The Gift of the Givers Foundation is the largest disaster response, non-governmental organization
                    of African origin on the African continent. We stand as a beacon of hope in times of crisis,
                    dedicated to providing swift and effective aid to communities struck by natural disasters and emergencies.
                </p>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-body">
                <h3 class="card-title"><i class="fas fa-hand-holding-heart text-danger me-2"></i>What We Do</h3>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <i class="fas fa-check text-success me-2"></i>
                        <strong>Disaster Response:</strong> Rapid deployment of aid during natural disasters
                    </li>
                    <li class="list-group-item">
                        <i class="fas fa-check text-success me-2"></i>
                        <strong>Medical Assistance:</strong> Providing healthcare services in crisis areas
                    </li>
                    <li class="list-group-item">
                        <i class="fas fa-check text-success me-2"></i>
                        <strong>Food Security:</strong> Nutrition support for vulnerable communities
                    </li>
                    <li class="list-group-item">
                        <i class="fas fa-check text-success me-2"></i>
                        <strong>Water Provision:</strong> Clean water solutions in drought-stricken areas
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>