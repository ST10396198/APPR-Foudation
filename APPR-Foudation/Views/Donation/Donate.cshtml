@model APPR_Foudation.Models.ResourceDonation

@{
    ViewData["Title"] = "Make Donation";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <h2 class="text-center mb-4">Make a Donation</h2>

        <div class="card">
            <div class="card-body">
                <form asp-action="Donate" method="post">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label asp-for="DonationType" class="form-label"></label>
                        <select asp-for="DonationType" asp-items="Html.GetEnumSelectList<DonationType>()" class="form-control">
                            <option value="">Select Donation Type</option>
                        </select>
                        <span asp-validation-for="DonationType" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ItemName" class="form-label"></label>
                        <input asp-for="ItemName" class="form-control" />
                        <span asp-validation-for="ItemName" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Quantity" class="form-label"></label>
                            <input asp-for="Quantity" class="form-control" type="number" min="1" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Unit" class="form-label"></label>
                            <input asp-for="Unit" class="form-control" />
                            <span asp-validation-for="Unit" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PreferredDropOffLocation" class="form-label"></label>
                        <input asp-for="PreferredDropOffLocation" class="form-control" />
                        <span asp-validation-for="PreferredDropOffLocation" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">Submit Donation</button>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}